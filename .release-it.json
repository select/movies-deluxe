{
  "git": {
    "commitMessage": "chore(release): v${version}",
    "tagName": "v${version}",
    "push": true
  },
  "github": {
    "release": false
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  },
  "hooks": {
    "before:init": [
      "pnpm lint",
      "pnpm typecheck",
      "pnpm prettier --check --ignore-path .prettierignore"
    ]
  }
}
