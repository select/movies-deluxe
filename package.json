{
  "name": "movies-deluxe",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "build:prod": "NUXT_APP_BASE_URL=/movies/ nuxt generate --preset github_pages",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare && tsx scripts/copy-sqlite-wasm.ts",
    "prepare": "simple-git-hooks",
    "commitlint": "commitlint --edit",
    "lint": "oxlint && eslint .",
    "lint:fix": "oxlint --fix && eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "nuxt typecheck",
    "typecheck:watch": "nuxt typecheck --watch",
    "db:generate": "tsx scripts/generate-sqlite.ts",
    "posters:extract": "tsx scripts/extract-posters.ts",
    "youtube:setup": "tsx scripts/setup-youtube-api.ts",
    "youtube:detect-blocked": "tsx scripts/detect-blocked-youtube.ts",
    "release": "release-it"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "pnpm commitlint --edit $1"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "oxlint --fix",
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write --ignore-path .prettierignore"
    ]
  },
  "dependencies": {
    "@opencode-ai/sdk": "1.0.160",
    "@pinia/nuxt": "0.11.3",
    "@sqlite.org/sqlite-wasm": "3.51.1-build2",
    "@types/tar": "6.1.13",
    "@vueuse/core": "14.1.0",
    "@vueuse/integrations": "14.1.0",
    "@vueuse/nuxt": "14.1.0",
    "dotenv": "17.2.3",
    "focus-trap": "7.7.0",
    "fuse.js": "7.1.0",
    "googleapis": "169.0.0",
    "nuxt": "4.2.2",
    "pinia": "3.0.4",
    "tar": "7.5.2",
    "vue": "3.5.25",
    "vue-router": "4.6.4"
  },
  "devDependencies": {
    "@commitlint/cli": "20.2.0",
    "@commitlint/config-conventional": "20.2.0",
    "@iconify-json/carbon": "1.2.15",
    "@iconify-json/material-symbols-light": "1.2.50",
    "@iconify-json/mdi": "1.2.3",
    "@nuxt/eslint": "1.12.1",
    "@release-it/conventional-changelog": "10.0.4",
    "@types/better-sqlite3": "7.6.13",
    "@types/node": "25.0.2",
    "@typescript-eslint/eslint-plugin": "8.50.0",
    "@typescript-eslint/parser": "8.50.0",
    "@unocss/nuxt": "66.5.10",
    "@unocss/preset-web-fonts": "66.5.10",
    "@unocss/preset-wind4": "66.5.10",
    "@unocss/reset": "66.5.10",
    "better-sqlite3": "12.5.0",
    "conventional-changelog-conventionalcommits": "9.1.0",
    "eslint": "9.39.2",
    "eslint-plugin-oxlint": "1.33.0",
    "eslint-plugin-vue": "10.6.2",
    "glob": "13.0.0",
    "lint-staged": "16.2.7",
    "oxlint": "1.33.0",
    "prettier": "3.7.4",
    "prettier-plugin-vue": "1.1.6",
    "release-it": "19.2.3",
    "simple-git-hooks": "2.13.1",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.50.0",
    "unocss": "66.5.10",
    "youtubei.js": "16.0.1"
  }
}
