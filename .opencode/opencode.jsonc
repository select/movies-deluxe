{
  "$schema": "https://opencode.ai/config.json",
  // === Plugins ===
  "plugin": ["opencode-gemini-auth@latest"],
  // === MCP Servers ===
  // "mcp": {
  //   "TypeSlayer": {
  //     "type": "local",
  //     "command": ["pnpm", "dlx", "typeslayer", "mcp"],
  //     "enabled": true,
  //   },
  // },
  // === Permissions ===
  "permission": {
    "doom_loop": "ask",
    "edit": {
      "eslint.config.ts": "ask",
    },
    "bash": {
      "git restore *": "ask",
      "pkill -f \"nuxt dev\"*": "ask",
    },
  },
  // === Models ===
  "provider": {
    "google": {
      "models": {
        "gemini-3-flash-preview": {
          "limit": {
            "context": 300000,
            "output": 65536,
          },
        },
      },
    },
    "amazon-bedrock": {
      "models": {
        "anthropic.claude-sonnet-4-5-20250929-v1:0": {
          "limit": {
            "context": 120000,
            "output": 64000,
          },
        },
      },
    },
  },
}
