{
  "$schema": "https://opencode.ai/config.json",
  // === Plugins ===
  "plugin": ["opencode-gemini-auth@latest"],
  "permission": {
    "doom_loop": "ask",
    "edit": {
      "eslint.config.ts": "deny",
    },
    "bash": {
      "git restore *": "ask",
      "pkill -f \"nuxt dev\"*": "deny",
    },
  },
  // === Models ===
  "provider": {
    "google": {
      "models": {
        "gemini-3-flash-preview": {
          "limit": {
            "context": 300000,
            "output": 65536,
          },
        },
      },
    },
    "amazon-bedrock": {
      "models": {
        "anthropic.claude-sonnet-4-5-20250929-v1:0": {
          "limit": {
            "context": 120000,
            "output": 64000,
          },
        },
      },
    },
  },
}
